<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
     <ImageView
         android:id="@+id/slide_img"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:scaleType="centerCrop"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:src="@mipmap/ic_launcher"/>


     <ImageView
         android:id="@+id/imgview2"
         android:layout_width="@dimen/_0dp"
         android:layout_height="@dimen/_100dp"
         app:layout_constraintBottom_toBottomOf="@+id/slide_img"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:srcCompat="@drawable/gradient_bg"/>
     <TextView
         android:id="@+id/slide_title"
         android:layout_width="@dimen/_0dp"
         android:layout_height="wrap_content"
         android:layout_marginRight="@dimen/_24dp"
         android:layout_marginLeft="@dimen/_24dp"
         android:layout_marginStart="@dimen/_24dp"
         android:layout_marginEnd="@dimen/_24dp"
         android:textColor="@color/white"
         android:textSize="@dimen/_24sp"
         app:layout_constraintStart_toStartOf="@+id/imgview2"
         app:layout_constraintEnd_toEndOf="@+id/imgview2"
         app:layout_constraintBottom_toBottomOf="@+id/imgview2"
         app:layout_constraintTop_toTopOf="@+id/imgview2"
         app:layout_constraintHorizontal_bias="0.0"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
